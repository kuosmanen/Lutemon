<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imgHomeBackground"
        android:layout_width="549dp"
        android:layout_height="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_home" />

    <ImageView
        android:id="@+id/imageViewSleeping"
        android:layout_width="403dp"
        android:layout_height="429dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_home_sleep" />

    <Button
        android:id="@+id/buttonCreateLutemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:onClick="switchToCreation"
        android:text="Create Lutemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHomeBackground" />

    <Button
        android:id="@+id/buttonSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateLutemon" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="181dp"
        android:layout_height="178dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHomeBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/svCheckBoxesHome"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLutemonsAtHome"
        android:layout_width="201dp"
        android:layout_height="193dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateLutemon" />

    <RadioGroup
        android:id="@+id/rgHomeToX"
        android:layout_width="98dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeInstructions"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/rbSleep"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Sleep" />

        <RadioButton
            android:id="@+id/rbBattlefield"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Battlefield" />

        <RadioButton
            android:id="@+id/rbTraining"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Training" />

        <RadioButton
            android:id="@+id/rbHospital"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Hospital" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtHomeInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose lutemons to send "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/buttonSendFromHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendLutemonsFromHome"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/rgHomeToX"
        app:layout_constraintTop_toBottomOf="@+id/rvLutemonsAtHome"
        app:layout_constraintVertical_bias="0.425" />

</androidx.constraintlayout.widget.ConstraintLayout>